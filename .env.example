# Server Configuration
PORT=8000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/hotel-booking

# JWT
SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Backend URLs
BACKEND_PROD_URL=https://your-production-domain.com
BACKEND_DEV_URL=http://localhost:8000

# Cloudinary
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Redis URLs (separate instances for different concerns)
REDIS_CACHE_URL=redis://localhost:6379
REDIS_QUEUE_URL=redis://localhost:6380
REDIS_RATE_LIMITER_URL=redis://localhost:6381

# Admin Passwords (for seeding)
